{
    "compilerOptions": {
        "outDir": "dist",
        "declarationDir": "types",
        "module": "commonjs",
        "target": "es2017",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strict": false,
        "strictPropertyInitialization": false,
        "esModuleInterop": true,
        "sourceMap": false,
        "noImplicitAny": false,
        "noImplicitReturns": false,
        "skipLibCheck": true,
        "declaration": true,
        "rootDir": "src",
        "lib": ["es2017", "dom"]
    },
    "include": ["./src/**/*.ts"]
}
