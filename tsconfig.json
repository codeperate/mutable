{
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs"
        }
    },
    "compilerOptions": {
        "outDir": "dist",
        "module": "ESNext",
        "target": "ESNext",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "esModuleInterop": true,
        "sourceMap": false,
        "noImplicitAny": false,
        "noImplicitReturns": false,
        "skipLibCheck": true,
        "declaration": true,
        "rootDir": "src",
        "lib": ["es2017", "dom"]
    },
    "include": ["./src/**/*.ts"]
}
